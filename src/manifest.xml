<OfficeApp xmlns="http://schemas.microsoft.com/office/officeapp"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/taskpaneapp"
           xsi:type="TaskPaneApp">
  <Id>70b28b48-abcc-468f-9943-155765ca8809</Id>
  <Version>1.0.0</Version>
  <ProviderName>Your Provider Name</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="My Outlook Add-in"/>
  <Description DefaultValue="This is a sample Outlook add-in."/>
  <IconUrl DefaultValue="https://davidmoffatt-web.github.io/email2PDFv2/images/icon.svg"/>
  <HighResolutionIconUrl DefaultValue="https://davidmoffatt-web.github.io/email2PDFv2/images/icon@2x.svg"/>
  <SupportUrl DefaultValue="https://davidmoffatt-web.github.io/email2PDFv2/support.html"/>
  <AppDomains>
    <AppDomain>https://davidmoffatt-web.github.io/email2PDFv2</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  <Permissions>ReadWriteItem</Permissions>
  <FormSettings>
    <Form xsi:type="ReadWriteItem">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://davidmoffatt-web.github.io/email2PDFv2/src/taskpane/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.1">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="Mailbox">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="groupLabel"/>
                <Control xsi:type="Button" id="msgReadButton">
                  <Label resid="buttonLabel"/>
                  <Supertip>
                    <Title resid="buttonTitle"/>
                    <Description resid="buttonDesc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="taskpaneUrl"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://davidmoffatt-web.github.io/email2PDFv2/images/icon16.svg"/>
        <bt:Image id="icon32" DefaultValue="https://davidmoffatt-web.github.io/email2PDFv2/images/icon32.svg"/>
        <bt:Image id="icon80" DefaultValue="https://davidmoffatt-web.github.io/email2PDFv2/images/icon80.svg"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="taskpaneUrl" DefaultValue="https://davidmoffatt-web.github.io/email2PDFv2/src/taskpane/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Email 2 PDF"/>
        <bt:String id="buttonLabel" DefaultValue="Convert to PDF"/>
        <bt:String id="buttonTitle" DefaultValue="Convert Email"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="buttonDesc" DefaultValue="Convert this email, its attachments, and embedded images to a PDF."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>